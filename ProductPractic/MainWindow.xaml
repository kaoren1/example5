<Window x:Class="ProductPractic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductPractic"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300">
    <Grid x:Name="Grid1">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="  Авторизация" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="35" Grid.Row="0"></TextBlock>
        <TextBox x:Name="Login" Grid.Row="1"></TextBox>
        <PasswordBox x:Name="Password" Grid.Row="2"></PasswordBox>
        <Button Content="Авторизоваться" Grid.Row="3" x:Name="Enter" FontSize="20" Click="Enter_Click" />
    </Grid>
</Window>
